@model IEnumerable<Post>

<div class="display-4 d-flex justify-content-center align-items-center mb-5"
    style=" width: 100%;
            height: 300px;
            background-image: url('/static/imges/home-bg.jpg');
    ">
    <h1 class="display-1 text-muted">Amazing Presonal Blog</h1>
</div>

<div class="container">
    <div class="row ">
        @foreach (var post in Model)
        {
            <div class="col-12 col-lg-6 ">

                <div class="card mb-3" style="height:150px;">
                    <div class="row no-gutters">

                        <div class="col">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a asp-controller="home" asp-action="post" asp-route-id="@post.Id">
                                        @post.Title
                                    </a>
                                </h5>
                                <p class="card-text">
                                    @post.Body.Substring(0, @post.Body.Length > 50 ? 50 : @post.Body.Length)
                                </p>
                                <p class="card-text">
                                    <small class="text-muted">created @post.CreatedAt</small>
                                </p>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(post.Image))
                        {
                            <div class="col-4 " style="height: 150px;"> 
                                <img src="/images/@post.Image" class="card-img " style="height: 146px;">
                            </div>
                        }
                        

                    </div>
                </div>                
            </div>

        }
    </div>

   

</div>
