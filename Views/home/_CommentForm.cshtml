@model CommentViewModel





<form method="post" asp-controller="Comment" asp-action="add">

    <input asp-for="PostId" type="hidden" />
    <input asp-for="MainCommentId" type="hidden" />

    @if (Model.MainCommentId > 0)
    {
        <input asp-for="Message" class="w-50" placeholder="reply..." />
        <button type="submit">comment</button>
    }
    else
    {
        <textarea asp-for="Message" class="w-75" placeholder="comment..."></textarea>
        <br />
        <button type="submit">comment</button>
    }


</form>