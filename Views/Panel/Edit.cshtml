@model PostViewModel

<div>
    <form method="post" enctype="multipart/form-data">
        <input asp-for="Id" hidden />
        <div class="form-group">
            <label asp-for="Title"></label><br />
            <input asp-for="Title" class="form-control"/>
        </div>

        <div class="form-group">
            <label asp-for="Body"></label><br />
            <input asp-for="Body"class="form-control" />
        </div>

        @if (!string.IsNullOrEmpty(Model.ImageName)) 
        { 
            <div class="form-group">
                <img src="/images/@Model.ImageName" class="w-50"/>
            </div>

        }

        <input asp-for="@Model.ImageName"  hidden/>

        <div class="form-group">
            <label>change image</label>
            <input asp-for="ImageObj" class="form-control" />
        </div>

        <input type="submit" value="Post" />
    </form>
</div>